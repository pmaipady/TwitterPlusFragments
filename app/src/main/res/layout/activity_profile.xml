<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codepath.apps.twitterplusfragments.models.ProfileActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:id="@+id/rlUserHeader"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <ImageButton
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:id="@+id/ivComposeProfile"
             android:layout_alignParentTop="true"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:id="@+id/tvComposeUser"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivComposeProfile"
            android:layout_toEndOf="@+id/ivComposeProfile" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag Line"
            android:id="@+id/tvTagline"

            android:layout_alignBottom="@+id/ivComposeProfile"
            android:layout_toRightOf="@+id/ivComposeProfile"
            android:layout_toEndOf="@+id/ivComposeProfile" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/ivComposeProfile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#fffff0da">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends"
                android:id="@+id/tvFriendsCount"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_toRightOf="@+id/tvFollowersCount"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:id="@+id/tvFollowersCount"
                android:layout_alignParentLeft="true"
                />

            ></LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rlUserHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/flContainer"></FrameLayout>
</RelativeLayout>
